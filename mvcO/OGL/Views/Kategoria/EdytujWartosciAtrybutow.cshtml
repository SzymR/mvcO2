@model Repozytorium.Models.View.AtrybutyZWartosciamiSLownik

@{
    ViewBag.Title = "EdytujWartosciAtrybutow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edytuj Wartosci Atrybutow</h2>

 <br/>

 

    @Html.ActionLink("Dodaj Atrybut", "DodajAtrybut", null,  new { @class = "btn" })
 
<br />
<br />
<br />


@using (Html.BeginForm())
{
    
    <h6> Wybierz atrybut do edycji </h6>
    @Html.DropDownListFor(model => Model.zaznaczonyAtrybut, Model.wszystkieAtrybuty, new { @class = "form-control" })
    <br />

    <div class="form-group">
        
            <input type="submit" value="Odświez " class="btn btn-default" />
      
    </div>
}

<br />
<hr/>


<table class="table">
    <tr></tr>

    @foreach (var item in Model.wartosciZaznaczonegoAtrybutu)
    {
      
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Wartosc)
            </td>


            <td>
               
                    
                    @Html.ActionLink("Usuń wartość ", "UsunWartoscAtrybutu", new { id = item.Id }, new { @class = "btn btn-primary" })
               
            </td>

        </tr>



    }
</table>


@using (Html.BeginForm())
{
    
    @Html.HiddenFor(model => model.Atrybut.Id);

    <div class="form-group">
        @Html.LabelFor(model => model.nowaWartoscAtrybutu.Wartosc, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.nowaWartoscAtrybutu.Wartosc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nowaWartoscAtrybutu.Wartosc ,"", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value=" Dodaj Wartość" class="btn btn-default" />
        </div>
    </div>
}
