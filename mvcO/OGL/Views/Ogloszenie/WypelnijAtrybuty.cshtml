@model List<Repozytorium.Models.View.AtrybutZWartosciami>
@{
    ViewBag.Title = "WypelnijAtrybuty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Wypelnij Atrybuty</h2>




<div>

    @using (Html.BeginForm("DodajAtrybuty", "Ogloszenie", FormMethod.Post))
    {
       
        for (int i = 0; i < Model.Count; i++)
        {
            <h5> Atrybuty dla kategori : @Html.DisplayFor(x => x[i].atrybut.Nazwa) </h5>
        

            @Html.HiddenFor(m => m[i].atrybut.Id);
            @Html.HiddenFor(m => m[i].ogloszenie.Id);
            @Html.DropDownListFor(m => m[i].Selected, Model[i].list, new { @class = "form-control" })


        }

        <input type="submit" class=" btn btn bg-primary" value="  Akceptuj " />

    }


</div>
